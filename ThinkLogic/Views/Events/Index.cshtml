@using ThinkLogic.Domain.Entities
@model IEnumerable<Event> 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Index</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Event Calendar</h1>

        <div class="mb-3 text-end">
            <a href="@Url.Action("Create", "Events")" class="btn btn-success">Create New Event</a>
        </div>

        <!-- Display Existing Events -->
        <div class="mb-3">
            <h2>Event List</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eventItem in Model)
                    {
                        <tr>
                            <td>@eventItem.Title</td>
                            <td>@eventItem.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@eventItem.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@eventItem.Location</td>
                            <td>
                                <a href="@Url.Action("Edit", "Events", new { id = eventItem.Id })" class="btn btn-sm btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

       
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>
